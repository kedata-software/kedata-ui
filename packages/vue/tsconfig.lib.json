{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.types.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue"
  ],
  "exclude": ["vite.config.ts", "src/**/*.test.vue", "src/**/*.stories.vue"]
}
